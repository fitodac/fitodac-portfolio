	.container
		.row

			.col-lg-6
				if(linkCanonical = 'AMP')
					img.brand-amp(src="#{imgPath}amp-2.png")
				else
					svg.brand: use(xlink:href="#svg-brand-alt")
				
				

				.row
					.col-sm-6

						.h3 ON SOM
						if(linkCanonical = 'AMP')
							address
								p.
									Casal de Barri Espai Antoni Miró Peris #[br]
									Pl. de Carme Montoriol, 10 #[br]
									08026 Barcelona
								p: a(href="tel:934 507 013") T. 934 507 013
								p: a(href="mailto:eamp@farinera.org") eamp@farinera.org


							.social
								a(href="#")
									span.sr-only facebook
									svg: use(xlink:href="#ico-facebook")

								a(href="#")
									span.sr-only twitter
									svg: use(xlink:href="#ico-twitter")



						else
							address
								p.
									Centre Cultural la Farinera del Clot #[br]
									Gran Via de les Corts Catalanes, 837 #[br]
									08018 Barcelona
								p: a(href="tel:932 918 080") T. 932 918 080
								p: a(href="mailto:informacio@farinera.org") informacio@farinera.org

							include _social.jade





					.col-sm-6
						.h3 HORARI D’ATENCIÓ AL PÚBLIC

						if(linkCanonical = 'AMP')
							p.p-b-lg.
